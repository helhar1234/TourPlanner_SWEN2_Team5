<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane styleClass="detail-container" stylesheets="@css/tourDetail.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="technikum.at.tourplanner_swen2_team5.controller.TourDetailController">
    <columnConstraints>
        <ColumnConstraints minWidth="10" prefWidth="150" hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="70" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50" vgrow="SOMETIMES" />
        <RowConstraints minHeight="200" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50" vgrow="SOMETIMES" />
        <RowConstraints minHeight="200" vgrow="ALWAYS" /> <!-- Großer Bereich für die Tour Logs als Platzhalter -->
    </rowConstraints>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <Button fx:id="backButton" styleClass="icon-button">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                    <Image url="@img/icons/arrow-icon.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <Label fx:id="titleLabel" styleClass="detail-title" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

    <ImageView styleClass="tour-image-container" fx:id="mapImage" fitHeight="200" fitWidth="100" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <!-- Placeholder für die map -->
    </ImageView>

    <VBox styleClass="tour-data-container" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
        <Label fx:id="tourName"/>
        <Label fx:id="tourStart"/>
        <Label fx:id="tourDestination"/>
        <Label fx:id="tourTransportationType"/>
        <Label fx:id="tourDistance"/>
        <Label fx:id="tourTime"/>
    </VBox>

    <Label text="Tour Logs" styleClass="section-title" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" />

    <VBox styleClass="tour-log-container" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
        <!-- Platzhalter für zukünftige Tour Logs -->
    </VBox>
</GridPane>

