<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="entry" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@css/logEntry.css" spacing="5"
      fillWidth="true">
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <ImageView fx:id="transportTypeIcon" styleClass="transport-icon"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="ALWAYS">
        <Label fx:id="dateLabel" styleClass="log-date-label"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label fx:id="ratingLabel" styleClass="log-rating-label"/>
    </HBox>
    <Label fx:id="detailsLabel" styleClass="log-details-label"/>
    <Label fx:id="commentLabel" styleClass="log-comment-label" wrapText="true"/>
    <!-- New HBox for buttons at the bottom -->
    <HBox alignment="BOTTOM_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
        <Button fx:id="editButton" styleClass="icon-button">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <Image url="@img/icons/edit-icon.png"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="downloadButton" styleClass="icon-button">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <Image url="@img/icons/download-icon.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="deleteButton" styleClass="icon-button">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <Image url="@img/icons/trash-icon.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>
